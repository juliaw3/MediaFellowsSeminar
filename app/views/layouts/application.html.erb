<!DOCTYPE html>
<html>
  <head>
    <title>MediaSeminar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header class="navbar navbar-inverse" role="navigation">
  	<div class="container1">
  		<% flash.each do |message_type, message| %>
  		<div class="alert alert-<%=message_type %>"><%=message %></div>
  		<%end%>
  	
  		<div class="container">
  			<nav class="text-center">
  				<h1><%= image_tag "newLogo.png", :width => "350px", :height => "auto", :class => "style_image" %></h1>
  			<ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Home", :controller => 'home', :action => 'index'%></li>
  					<li><%= link_to "Speaker Series", :controller => 'schedule', :action => 'redirect' %></li>
  					<li><%= link_to "Requirements", '#' %></li>
  					<li><%= link_to "Internships", '#' %></li>
  			</ul>
  			</nav>
        </div>
        <div class="top-line"></div>
  	</header>
  	<div class="container">
  		<br /><br /><br />
	<%= yield %>
  	</div>

  	<div class="footer">
  		<p><%= image_tag "newLogo.png", :width => "150px", :height => "auto" %></p>
  	</div>
  </body>
</html>
